{
	"env": {
		"browser": true,
		"commonjs": false,
		"es6": true,
		"node": true
	},
	"extends": [
		"airbnb",
		"eslint:recommended",
		"plugin:jsx-a11y/recommended"
	],
	"plugins": [
		"jsx-a11y",
		"no-secrets",
		"react",
		"react-hooks"
	],
	"rules": {
    "import/no-extraneous-dependencies": 0,
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}